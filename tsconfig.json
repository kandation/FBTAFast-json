{
  "compilerOptions": {
    "target": "ES2015",
    "module": "CommonJS",
    "noEmitOnError": true,
    "noImplicitAny": false,
    "experimentalDecorators": true,
    "sourceMap": true,
    "outDir": "dist",
    "allowSyntheticDefaultImports": true,
    "skipLibCheck": true
  },
  "exclude": [
    "dist",
    "node_modules",
    "Test"
  ]
}